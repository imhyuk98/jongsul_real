<%-include('header.ejs')%>
    <!DOCTYPE html>
    <html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <style>
            body {
                margin: 0;
                padding: 0;
                font-family: sans-serif;
                background: linear-gradient(#141e30, #243b55);
                color: #fff;
                text-align: center;
            }

            h2 {
                border-bottom: 1px solid #aaa;
                margin-bottom: 20px;
                padding-bottom: 10px;
            }

            table {
                width: 80%;
                margin: 20px auto;
                border-collapse: collapse;
            }

            th,
            td {
                padding: 10px;
                text-align: center;
            }

            th {
                background-color: #141e30;
                color: #fff;
            }

            tr:nth-child(even) {
                background-color: #34495e;
            }

            a {
                color: #03e9f4;
                text-decoration: none;
                cursor: pointer;
            }

            a:hover {
                text-decoration: underline;
            }
        </style>
    </head>

    <body>
        <h2>문의내역</h2>

        <table border="1">
            <tr>
                <th>idx</th>
                <th>성명</th>
                <th>연락처</th>
                <th>이메일</th>
                <th>문의내용</th>
                <th>등록일</th>
                <th>관리</th>
            </tr>

            <% lists.forEach(function(item){ %>
                <tr>
                    <td>
                        <%=item.idx%>
                    </td>
                    <td>
                        <%=item.name%>
                    </td>
                    <td>
                        <%=item.phone%>
                    </td>
                    <td>
                        <%=item.email%>
                    </td>
                    <td><%-item.memo.replaceAll("\n","<br>")%></td>
                    <td>
                        <%=item.regdate%>
                    </td>
                    <td><a href="/contactDelete?idx=<%=item.idx%>" onclick="return confirm('정말 삭제할까요?')">삭제</a></td>
                </tr>
                <% }) %>
        </table>
    </body>

    </html>


    <%-include('footer.ejs')%>